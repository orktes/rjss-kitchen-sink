@var width: ${window.innerWidth / 3};
@var height: ${window.innerHeight};

page {
  position: 'relative';
  padding: 14;
  width: $width;
  height: $height;
  backgroundColor: '#f7f7f7';
  flexDirection: 'column'
}

title {
  fontSize: 22;
  lineHeight: 28;
  height: 28;
  marginBottom: 10;
  color: '#333';
  textAlign: 'center';
}

image {
  width: ${width  - 28};
  height: 300;
}

excerpt {
  fontSize: 17;
  lineHeight: 25;
  marginTop: 15;
  flex: 1;
  color: '#333';
}
