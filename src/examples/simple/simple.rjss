@var width: ${window.innerWidth / 3};
@var height: ${window.innerHeight};

page {
  position: 'relative';
  padding: 14;
  width: $width;
  height: $height;
  background-color: '#f7f7f7';
  flex-direction: 'column'
}

title {
  fontSize: 22;
  line-height: 28;
  height: 28;
  margin-bottom: 10;
  color: '#333';
  text-align: 'center';
}

image {
  width: ${width  - 28};
  height: 300;
}

excerpt {
  font-size: 17;
  line-height: 25;
  margin-top: 15;
  flex: 1;
  color: '#333';
}
